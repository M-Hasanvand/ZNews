@model HomePageViewModel
@{
    ViewData["Title"] = "صفحه اصلی";
}
<div id="page-content" class="page-wrapper">
    <div class="zm-section bg-white pt-50 xs-pt-30 sm-pt-30 pb-70">
        <div class="container">
            <div class="trending-post-area">
                <div class="container-fluid">
                    <div class="row">
                        <div class="trending-post-area pt-30 xs-pt-30">
                            <div class="container">
                                <div class="trend-post-list zm-posts owl-active-2 clearfix owl-carousel owl-theme owl-loaded">
                                    @if (Model.ListSliders!=null)
                                    {
                                        @foreach (var itemSilder in Model.ListSliders)
                                        {
                                            <div class="owl-item active" style="width: 330px; margin-right: 0px;">
                                                <div class="col-2">
                                                    <article class="zm-trending-post zm-lay-a zm-single-post" data-dark-overlay="2.5" data-scrim-bottom="9" data-effict-zoom="3">
                                                        <div class="zm-post-thumb">
                                                            <img src="~/@itemSilder.CoverNews" alt="img">
                                                        </div>
                                                        <div class="zm-post-dis text-white">
                                                            <div class="zm-category"><a href="~/News/Index?CateId=@itemSilder.CategoryId" class="bg-cat-3 cat-btn">@itemSilder.CategoryName</a></div>
                                                            <h2 class="zm-post-title"><a href="">@itemSilder.Title</a></h2>
                                                            <div class="zm-post-meta">
                                                                <ul>
                                                                    <li class="s-meta"><a class="zm-author">@itemSilder.UserName</a></li>
                                                                    <li class="s-meta">
                                                                        <a href="#" class="zm-date">
                                                                            @{
                                                                                PersianDateTime dateTimeSlider = new PersianDateTime(itemSilder.InsertTime);
                                                                                var inserTimeSlider = dateTimeSlider.ToLongDateString();
                                                                            }
                                                                            @inserTimeSlider
                                                                        </a>
                                                                    </li>
                                                                </ul>
                                                            </div>
                                                        </div>
                                                    </article>
                                                </div>
                                            </div>
                                        }
                                    }

                                    <!-- Start single trend post -->
                                    <!-- End single trend post -->
                                    <!-- Start single trend post -->
                                    <!-- End single trend post -->
                                    <!-- Start single trend post -->
                                    <!-- End single trend post -->
                                    <!-- Start single trend post -->
                                    <!-- End single trend post -->
                                    <div class="owl-stage-outer">
                                        <div class="owl-stage" style="transform: translate3d(-1650px, 0px, 0px); transition: all 0.25s ease 0s; width: 3960px;">

                                        </div><div class="owl-controls"><div class="owl-nav"><div class="owl-prev" style="display: none;">prev</div><div class="owl-next" style="display: none;">next</div></div><div class="owl-dots" style="display: none;"></div></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                    <br />
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 columns pull-right">
                        <div class="row mb-40">
                            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
                                <div class="section-title">
                                    <h2 class="h6 header-color inline-block uppercase"> جدیدترین اخبار روز</h2>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="zm-posts clearfix">
                                @if (Model.ListNewsDaily != null)
                                {
                                    @foreach (var itemNews in Model.ListNewsDaily)
                                    {
                                        <div class="col-xs-12 col-sm-6 col-md-6 col-lg-6">
                                            <article class="zm-post-lay-a1">
                                                <div class="zm-post-thumb">
                                                    <a href="~/@itemNews.CoverNews"><img src="~/@itemNews.CoverNews" alt="img"></a>
                                                </div>
                                                <div class="zm-post-dis">
                                                    <div class="zm-post-header">
                                                        <div class="zm-category"><a href="~/News/Index?CateId=@itemNews.CategoryId" class="bg-cat-3 cat-btn">@itemNews.CategoryName</a></div>
                                                        <h2 class="zm-post-title h2"><a href="/News/Detail?NewsId=@itemNews.Id">@itemNews.Title</a></h2>
                                                        <div class="zm-post-meta">
                                                            <ul>
                                                                <li class="s-meta"><a class="zm-author">  @itemNews.UserName </a></li>
                                                                <li class="s-meta">
                                                                    <a class="zm-date">
                                                                        @{
                                                                            PersianDateTime dateTime = new PersianDateTime(itemNews.InsertTime);
                                                                            var inserTime = dateTime.ToLongDateString();
                                                                        }
                                                                        @inserTime
                                                                    </a>
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                    <div class="zm-post-content">
                                                        <p>@itemNews.ShortDescription</p>
                                                    </div>
                                                </div>
                                            </article>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 sidebar-warp columns">
                        <div class="row">
                            <aside class="zm-tagcloud-list col-md-12 col-sm-6 col-lg-12 mt-70 sm-mt-0 hidden-sm columns">
                                <div class="row mb-40">
                                    <div class="col-md-12">
                                        <div class="section-title">
                                            <h2 class="h6 header-color inline-block uppercase">کلمات کلیدی </h2>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="zm-tagcloud">
                                            @if (Model.ListTags != null)
                                            {
                                                @foreach (var itemTag in Model.ListTags)
                                                {
                                                    <a href="~/News/Index?TagId=@itemTag.Id">@itemTag.Name</a>
                                                }
                                            }

                                        </div>
                                    </div>
                                </div>
                            </aside>
                            @await Component.InvokeAsync("NewsMostCommented")
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

